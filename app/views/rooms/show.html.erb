<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @room.price %>
</p>

<p>
  <strong>Rules:</strong>
  <%= @room.rules %>
</p>

<p>
  <strong>Minimum days:</strong>
  <%= @room.minimum_days %>
</p>

<p>
  <strong>Address:</strong>
  <%= @room.address %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @room.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @room.longitude %>
</p>

<% if @room.amenities != nil %> 
  <% @room.amenities.each do |amenity| %>
  <span><%= amenity.name %></span>
  <p><%= amenity.description %></p>
  <% end %>
<% end %>

<p>StartDate: <input type="text" id="Startdatepicker"></p>
<p>EndDate: <input type="text" id="Enddatepicker"></p>
<%= link_to 'new ammenity' , new_room_amenity_path(@room) %>|
<%= link_to "book" , new_room_booking_path(@room) , id: "book"%>|
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>

 <script>
  $( function() {
    $( "#Startdatepicker" ).datepicker({
      dateFormat: 'yy-mm-dd',
      changeMonth: true,
      changeYear: true
    });
    $( "#Enddatepicker" ).datepicker({
      dateFormat: 'yy-mm-dd',
      changeMonth: true,
      changeYear: true
    });
  } );
  </script>