<script>
  $( function() {
    $( "#slider-range-max" ).slider({
      range: "max",
      min: 1.0,
      max: 5.0,
      step: 0.1,
      value: 1.0,
      slide: function( event, ui ) {
        $( "#food" ).val( ui.value );
        $('#food-span').val( ui.value);
      }
    });
    $( "#food" ).val( $( "#slider-range-max" ).slider( "value" ) );
  } );
  </script>