<h3>Add review</h3>
<%= form_for Review.new ,remote: true do |f| %>

  <div class="field">
    <%= f.label :food %><br>
    <%= f.text_field :food, id: 'food' %>
    <div class="slider" id="first"></div>
  </div>

  <div class="field">
  <%= f.label :safety %><br>
  <%= f.text_field :safety, id: 'safety' %>
    <div class="slider" id="second"></div>
  </div>

  <%= f.submit "Add review"%>
<% end %>
 
