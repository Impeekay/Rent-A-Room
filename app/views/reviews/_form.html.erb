<%= form_for Review.new do |f| %>

  <div class="field">
    <%= f.label :food %>(<span id="food-span"></span>)<br>
    <%= f.hidden_field :food, id: 'food' %>
    <div id="slider-range-max"></div>
  </div>

<% end %>

