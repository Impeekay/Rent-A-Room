<h2>Add new Amenity for <%= @room.name %></h2>
	
	<%= form_for [@room,@amenity] do |f| %>
	
	 <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
 	 </div>

 	<div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  	</div>

  	<%= f.hidden_field :room_id , value: @room.id %>
  	<div class="field">
  		<%= f.submit %>
  	</div>

	<% end %>
